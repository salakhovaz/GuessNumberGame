@model GuessNumberGame.Models.GameView.IGameViewModel

<h2>Игра "Угадай число"</h2>
<p>@Model.Message</p>

@if (Model.IsGameActive)
{
    <form action="/GuessNumberGame/Guess" method="post">
        <input type="number" name="guess" min="1" max="30" required />
        <input type="submit" value="Отправить" />
    </form>
    <p>Попыток: @Model.Attempts</p>
}
else
{
    <p>Игра окончена.</p>
    <a href="@Url.Action("Index", "GuessNumberGame")">Начать заново!</a>
}